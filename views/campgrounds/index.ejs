
<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height:400px ;"></div>
    <h1>All Campgrounds</h1>
    
    <% for( let campground of camp ) { %>

        
        <div class="card mb-3">
            <div class="row ">
                <div class="col-md-4" >
                    <% if(campground.image.length) {%>
                    <img crossorigin="anonymous" src="<%= campground.image[0].url %>" alt="" class="img-fluid ">
                    <% }else { %>
                        <img crossorigin="anonymous" class="img-fluid" src="https://res.cloudinary.com/dpbuckwew/image/upload/v1688303107/YelpCamp/eps10-grey-upload-icon-or-logo-in-simple-flat-trendy-modern-style-isolated-on-white-background-free-vector_pqom7i.jpg" alt="">
                        <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                       
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <span class="text-muted">
                                <%= campground.location %>
                            </span>
                        </p>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>"><%= campground.title %></a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
        <script>
             const mapToken ='<%-process.env.MAPBOX_TOKEN%>';
             const camgroundJSON= {features:<%-JSON.stringify(camp)%>};
        </script>
        <script src="/javascripts/clusterMap.js"></script> 